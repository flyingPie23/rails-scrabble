
<div id="registration">
  <div class="container">
    <h2>Log in</h2>
    <p>Using Email:</p>
    <div class="body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-green form-links" %>
          <%= link_to "Sign up", new_session_path(resource_name), class: "btn-red form-links" %>

        </div>
      <% end %>

      <hr>

      <p>or Using:</p>

      <div class="sign-group">
        <a href="" class="sign-up sign-up-discord">
          <i class="fa-brands fa-discord"></i>
          <span>Discord</span>
        </a>

        <a href="" class="sign-up sign-up-google">
          <i class="fa-brands fa-google"></i>
          <span>Google</span>
        </a>

        <a href="" class="sign-up sign-up-github">
          <i class="fa-brands fa-github"></i>
         <span>Github</span>
        </a>
      </div>
    </div>
  </div>
</div>
